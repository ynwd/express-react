{
  "functions": {
    "source": "dist",
    "predeploy": "npm --prefix \"$RESOURCE_DIR\" run install"
  },
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "function": "api"      
      }
    ]
  }
}
